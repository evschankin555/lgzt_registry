[Unit]
Description=Registry Dashboard Backend (FastAPI)
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/lgzt_registry/registry_dashboard/backend
Environment="PATH=/var/www/lgzt_registry/registry_dashboard/backend/venv/bin"
ExecStart=/var/www/lgzt_registry/registry_dashboard/backend/venv/bin/python main.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
